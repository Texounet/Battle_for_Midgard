#include "../header/main.h"

void Eruption(SDL_Surface *ecran, int mstr)
{
	eff_ecr(ecran, mstr);
	if (hero.mp > 5)
	{
		anim_erupt(ecran, mstr);
		erupt(ecran);
 	if(hero.hp > 0 && enemy.hp > 0)
 		att_en(ecran, mstr);
	}
}

